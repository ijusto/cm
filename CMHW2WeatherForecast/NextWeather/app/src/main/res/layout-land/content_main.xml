<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
android:paddingBottom="10dp"
android:paddingLeft="10dp"
android:paddingRight="10dp"
android:paddingTop="10dp"
tools:context="pt.ua.nextweather.ui.MainActivity"
tools:showIn="@layout/activity_main">

    <fragment
        android:id="@+id/master_fragment_container"
        android:name="pt.ua.nextweather.ui.CityListMasterFragment"
        android:layout_width="356dp"
        android:layout_height="642dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="378dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_city_list" />

    <fragment
        android:id="@+id/detail_fragment_container"
        android:name="pt.ua.nextweather.ui.InfoDetailFragment"
        android:layout_width="384dp"
        android:layout_height="621dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-308dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/master_fragment_container"
        android:layout_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_info_detail" />

</RelativeLayout>
